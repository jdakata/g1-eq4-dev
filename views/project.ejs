<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('head.ejs') %>
</head>
<body class="container">

<div class="jumbotron">
    <h1>Nom du projet : <%= project.name %></h1>
    <p>Description : <%= project.description %></p>
    <i class="fas fa-circle" style="color:#212548"></i>
</div>


<ul class="list-unstyled">
    <p>Membres <a href="/projects/<%= project._id %>/new-member" class="btn btn-primary">New member</a></p>
    <div class="container-fluid">
        <div class="row">
            <div class="col">
            <% project.members.forEach(function(member) { %>
                <div class="col">
                    <p>Name : <%= member.name %></p>
                    <p>Role : <%= member.role %></p>
                    <p>email : <%= member.email %></p>
                    <p>color : <i class="fas fa-circle" style="color:#<%= member.color%>"></i></p>    
                    
                </div>
            <% }); %>
        </div>
    </div>
    <p>Date de d√©but : <%= project.start %></p>
    <p>Date de fin : <%= project.end %></p>
</ul>

<footer>
    <%- include('footer.ejs') %>
</footer>

</body>
</html>