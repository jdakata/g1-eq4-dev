<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('head.ejs') %>
</head>
<body class="container">

<div class="jumbotron">
    <h1>Nom du projet : <%= project.name %></h1>
    <p>Description : <%= project.description %></p>
</div>


<ul class="list-unstyled">
    <p>Membres</p>
    <div class="container-fluid">
        <div class="row">
            <div class="col">
            <% project.members.forEach(function(member) { %>
                <div class="col">
                    <p>Name : member.name</p>
                    <p>Role : member.role</p>
                    <p>email : member.email</p>
                    <p>color : <span class="dot" style="color:<%= member.color%>"></span></p>    
                </div>
            <% }); %>
        </div>
        <a href="/projects/<%= project._id %>/new-member" class="btn btn-primary stretched-link">New member</a>
    </div>
    <p>Date de d√©but : <%= project.start %></p>
    <p>Date de fin : <%= project.end %></p>
    <!-- <p>Sprint actuel : <%= actual_sprint %></p> -->
</ul>

<footer>
    <%- include('footer.ejs') %>
</footer>

</body>
</html>