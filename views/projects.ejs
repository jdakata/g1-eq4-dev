<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('head.ejs') %>
    <link rel="stylesheet" href="/projects.css">
</head>
<body>

<div class="container">
    <div class="jumbotron">
        <h1>Projet CDP</h1>
        <p>Liste des projets créés</p>
    </div>

    <a type="button" href="/new-project" class="btn btn-success">Créer un nouveau projet</a>

    <div class="row justify-content-around">
        <% projects.forEach(function(project) { %>
        <div class="col-4 p-3">
            <div class="card col-12 h-100">
                <div class="card-body">
                    <h5 class="card-title"><%= project.name %> </h5>
                    <p class="card-subtitle text-muted"><%= moment(project.start).locale('fr').format('DD MMM YYYY') %> -
                        <%= moment(project.end).locale('fr').format('DD MMM YYYY') %></p>
                    <p class="description"><%= project.description %></p>
                    <a href="/projects/<%= project._id %>" class="stretched-link"></a>
                </div>
            </div>
        </div>
        <% }); %>
    </div>
</div>

<footer>
    <%- include('footer.ejs') %>
</footer>

</body>
</html>
