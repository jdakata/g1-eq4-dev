<% USList.sort((s1, s2) => { return new Date(s2.priority) - new Date(s1.priority); }); %>
<% USList.forEach(function(US) { %>
    <div class="user-story border row m-0" data-us-id="<%= US._id %>">
        <% if (US.status === 'Frozen') { %>
            <span class="col-1 text-muted" id="userStoryId">#<%= US.id %></span>
        <% } else { %>
            <span class="col-1" id="userStoryId">#<%= US.id %></span>
        <% } %>
        <span class="description col" id="userStoryDescription"><%= US.description %></span>
        <small class="text-muted col-auto"><%= US.label %></small>
        <span class="col-1 text-center"><span class="badge-pill badge-info" id="userStoryDifficulty"><%= US.difficulty %></span></span>
        <% if (US.status !== 'Frozen') { %>
            <div class="dropdown">
                <span class="us-more col" onclick="showDropdown('<%= US._id %>');"><i class="fas fa-ellipsis-v"></i></span>
                <div id="dropdown-<%= US._id %>" class="dropdown-content">
                    <% if (sprintId) { %>
                    <a onclick="closeUS('<%= projectId %>', '<%= sprintId %>', '<%= US._id %>')">Fermer l'US</a>
                    <% } %>
                    <a onclick="showPopup('#edit-user-story<%=US.id%>')">Modifier</a>
                </div>
            </div>
            <div class="pop-up" id="edit-user-story<%= US.id %>">
                <%- include('edit-user-story.ejs', { projectId: projectId, US: US }); %>
            </div>
        <% } %>
    </div>
<% }); %>
